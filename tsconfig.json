{
  "compilerOptions": {
    "target": "es2020",
    "module": "commonjs",
    "moduleResolution": "node",
    "types": ["node", "jest"],
    "typeRoots": ["node_modules/@types"],
    "lib": [
      "ES2020"
    ],
    "rootDir": "./src",
    "outDir": "out",
    "allowJs": true,
    "resolveJsonModule": true,
    "strictPropertyInitialization": true,
    "strictNullChecks":true,
    "strict": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "skipLibCheck": true
  },
  "include": [
    "./src/**/*",
  ]
}
